<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/laranja"
    android:weightSum="1">

    <ImageView
        android:layout_width="199dp"
        android:layout_height="107dp"
        android:src="@drawable/cat_eyes"
        android:layout_marginTop="100px"
        android:layout_gravity="center"/>
    <TextView
       android:layout_margin="10dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O jogo ainda não foi lançado,
        Aproveite nosso outros aplicativos"
        />
    <Button

        android:background="@drawable/button"
        android:layout_width="277dp"
        android:layout_height="72dp"
        android:text="Saiba quando jogar"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/btn_toast"
        android:layout_gravity="center"
        android:clickable="true"

        />

    <Button
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:layout_width="277dp"
        android:layout_height="72dp"
        android:text="Jan Ken Po"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/btn_Jan"
        android:clickable="true"
        />

    <Button
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:layout_width="277dp"
        android:layout_height="72dp"
        android:text="Jogo da Velha"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/btn_velha"
        android:clickable="true"

         />
    <Button
        android:clickable="true"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:layout_width="277dp"
        android:layout_height="72dp"
        android:text="Calculadora imc"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/btn_imc"
        />

</LinearLayout>
